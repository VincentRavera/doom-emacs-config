# more at https://www.masteringemacs.org/article/complete-guide-mastering-eshell
# Defaults
alias q exit
alias f find-file $1
alias d dired $1
alias bd eshell-up $1
alias rg rg --color=always $*
alias l ls -lh $*
alias ll ls -lah $*
alias clear clear-scrollback
# Overide editor
alias e emacsclient $*
alias vi emacsclient $*
alias vim emacsclient $*
alias nvim emacsclient $*
# Docker Aliases
alias kapitan docker run -t -u ${id -u} --rm -v ${pwd}:/src:delegated deepmind/kapitan $*
# Tramp editing
## Sudo find file
alias sf find-file /sudo::${pwd}/$1
## remote absolute editing
# alias rf echo ${pwd}$1(:s,^\(/sudo:.*:.*/\).*,\1,)
